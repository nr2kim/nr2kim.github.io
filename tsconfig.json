{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "allowJs": false,
        "declaration": true,
        "experimentalDecorators" : true
    },
    "allowSyntheticDefaultImports" : false,
    "include": [
        "src/*"
    ],
    "exclude": [
        "**/tests/*.tsx"
    ]
}